<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hzw.supperbanner.MainActivity">

    <com.hzw.supperbanner.SupperBanner.SupperBannerView
        android:id="@+id/supperBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#10000000"
        app:indicatorColor="@android:color/darker_gray"
        app:indicatorHeight="6dp"
        app:indicatorSpace="0dp"
        app:indicatorWidth="16dp"
        app:isAutoScroll="true"
        app:isShowIndicator="true"
        app:pagerChangeDuration="1000"
        app:selectIndicatorColor="@color/colorAccent"
        app:showDuration="3000">

    </com.hzw.supperbanner.SupperBanner.SupperBannerView>


    <com.hzw.supperbanner.SupperBanner.SupperBannerView
        android:id="@+id/supperBanner2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:background="#10000000"
        app:clipPercent="0.8"
        app:clipSpace="20dp"
        app:clipWidth="200dp"
        app:indicatorColor="@android:color/darker_gray"
        app:indicatorSpace="0dp"
        app:isAutoScroll="true"
        app:isClipLayout="true"
        app:isShowIndicator="true"
        app:pagerChangeDuration="1000"
        app:showDuration="3000">

    </com.hzw.supperbanner.SupperBanner.SupperBannerView>

</LinearLayout>
